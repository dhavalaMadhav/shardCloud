          <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><path d="M12 2v4M12 18v4M2 12h4M18 12h4M5 5l3 3M16 16l3 3M19 5l-3 3M8 16l-3 3" stroke="#1e52cc" stroke-width="1.5"/></svg>
          Sign in
        </h3>
        <button class="btn ghost sm" type="button" onclick="closeModal('modalLogin')" aria-label="Close sign in">Close</button>
      </div>

      <form action="/login" method="POST" autocomplete="on">
        <div class="field">
          <input id="loginEmail" name="email" type="email" inputmode="email" autocomplete="username" placeholder=" " required>
          <label for="loginEmail">Email</label>
          <svg class="icon" viewBox="0 0 24 24" fill="none"><path d="M4 6h16v12H4z" stroke="currentColor" stroke-width="1.6"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.6"/></svg>
        </div>

        <div class="field">
          <input id="loginPass" name="password" type="password" autocomplete="current-password" placeholder=" " required>
          <label for="loginPass">Password</label>
          <svg class="icon" viewBox="0 0 24 24" fill="none"><rect x="5" y="11" width="14" height="8" rx="2" stroke="currentColor" stroke-width="1.6"/><path d="M8 11V8a4 4 0 1 1 8 0v3" stroke="currentColor" stroke-width="1.6"/></svg>
        </div>

        <div class="inline-actions">
          <label class="remember"><input id="rememberMe" type="checkbox"> Remember this device</label>
          <button type="button" class="link" id="lnkForgot">Forgot password?</button>
        </div>

        <div id="loginError" class="error" role="alert" aria-live="polite"></div>

        <div class="row" style="margin-top:12px">
          <button type="submit" class="btn">Sign in</button>
          <button type="button" class="btn neutral" id="loginWithGoogle">Sign in with Google</button>
        </div>

        <div class="center" style="margin-top:10px">
          <span class="muted">Don’t have an account?</span>
          <button type="button" class="link" id="switchToSignup">Create one</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Signup Modal (POST /register, no confirm password) -->
  <div id="modalSignup" class="modal-backdrop" role="dialog" aria-labelledby="signupTitle" aria-modal="true">
    <div class="modal">
      <div class="row spread" style="margin-bottom:6px">
        <h3 id="signupTitle" style="margin:6px 0; display:flex; gap:8px; align-items:center">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><path d="M12 3l8 4.5v9L12 21l-8-4.5v-9L12 3z" stroke="#1e52cc" stroke-width="1.5"/></svg>
          Create your account
        </h3>
        <button class="btn ghost sm" type="button" onclick="closeModal('modalSignup')" aria-label="Close sign up">Close</button>
      </div>

      <form action="/register" method="POST" autocomplete="on">
        <div class="field">
          <input id="signupName" name="name" type="text" autocomplete="name" placeholder=" " required>
          <label for="signupName">Full name</label>
          <svg class="icon" viewBox="0 0 24 24" fill="none"><circle cx="12" cy="8" r="3" stroke="currentColor" stroke-width="1.6"/><path d="M5 19a7 7 0 0 1 14 0" stroke="currentColor" stroke-width="1.6"/></svg>
        </div>

        <div class="field">
          <input id="signupEmail" name="email" type="email" inputmode="email" autocomplete="email" placeholder=" " required>
          <label for="signupEmail">Email</label>
          <svg class="icon" viewBox="0 0 24 24" fill="none"><path d="M4 6h16v12H4z" stroke="currentColor" stroke-width="1.6"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.6"/></svg>
        </div>
        <div class="help">A verification link may be sent to this email.</div>

        <div class="field">
          <input id="signupPass" name="password" type="password" autocomplete="new-password" placeholder=" " required>
          <label for="signupPass">Password</label>
          <svg class="icon" viewBox="0 0 24 24" fill="none"><rect x="5" y="11" width="14" height="8" rx="2" stroke="currentColor" stroke-width="1.6"/><path d="M8 11V8a4 4 0 1 1 8 0v3" stroke="currentColor" stroke-width="1.6"/></svg>
        </div>
        <div class="help">Use a strong password (8+ characters recommended).</div>

        <div id="signupError" class="error" role="alert" aria-live="polite"></div>
        <div id="signupSuccess" class="success" role="status" aria-live="polite">Account created successfully.</div>

        <div class="row" style="margin-top:12px">
          <button type="submit" class="btn">Create account</button>
          <button type="button" class="btn neutral" id="signupWithGoogle">Sign up with Google</button>
        </div>

        <div class="center" style="margin-top:10px">
          <span class="muted">Already have an account?</span>
          <button type="button" class="link" id="switchToLogin">Sign in</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Forgot Password Modal (UI placeholder) -->
  <div id="modalForgot" class="modal-backdrop" role="dialog" aria-labelledby="forgotTitle" aria-modal="true">
    <div class="modal">
      <div class="row spread" style="margin-bottom:6px">
        <h3 id="forgotTitle" style="margin:6px 0; display:flex; gap:8px; align-items:center">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none"><path d="M12 2a7 7 0 0 1 7 7c0 5-7 9-7 9s-7-4-7-9a7 7 0 0 1 7-7z" stroke="#1e52cc" stroke-width="1.5"/><circle cx="12" cy="9" r="2" stroke="#1e52cc" stroke-width="1.5"/></svg>
          Reset password
        </h3>
        <button class="btn ghost sm" type="button" onclick="closeModal('modalForgot')" aria-label="Close reset">Close</button>
      </div>

      <form onsubmit="event.preventDefault(); alert('Reset link sent (demo)'); closeModal('modalForgot'); openModal('modalLogin');">
        <div class="field">
          <input id="forgotEmail" name="email" type="email" inputmode="email" autocomplete="email" placeholder=" " required>
          <label for="forgotEmail">Email</label>
          <svg class="icon" viewBox="0 0 24 24" fill="none"><path d="M4 6h16v12H4z" stroke="currentColor" stroke-width="1.6"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.6"/></svg>
        </div>
        <div class="row" style="margin-top:10px">
          <button type="submit" class="btn">Send reset link</button>
        </div>
        <div class="row" style="margin-top:8px">
          <button type="button" class="link" id="backToLogin">Back to sign in</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    /* Smooth scroll */
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        const id = a.getAttribute('href'); if(id.length>1){ e.preventDefault(); const t = document.querySelector(id); if(t) t.scrollIntoView({behavior:'smooth', block:'start'}); }
      });
    });

    /* Header style on scroll */
    const hdr = document.getElementById('hdr');
    window.addEventListener('scroll', ()=>{
      const opaque = window.scrollY > 100;
      hdr.style.background = opaque ? 'linear-gradient(180deg,#fff 0%, #fff 100%)' : 'linear-gradient(180deg,#fff 0%,#fff 70%,rgba(255,255,255,0.7) 100%)';
      hdr.style.boxShadow = opaque ? '0 6px 18px rgba(12,30,80,0.08)' : 'none';
    });

    /* Reveal on scroll */
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('active'); } });
    },{threshold:.12, rootMargin:'0px 0px -60px 0px'});
    document.querySelectorAll('.reveal').forEach(el=> io.observe(el));

    /* Open/close modals */
    function openModal(id){ const m = document.getElementById(id); if(m) m.style.display='flex'; }
    function closeModal(id){ const m = document.getElementById(id); if(m) m.style.display='none'; }

    // Triggers
    // [['btnLogin','modalLogin'],['btnSignup','modalSignup'],['ctaLogin','modalLogin'],['ctaSignup','modalSignup']]
    //   .forEach(([b,m]) => document.getElementById(b)?.addEventListener('click', ()=> openModal(m)));

    document.getElementById('switchToSignup')?.addEventListener('click', ()=> { closeModal('modalLogin'); openModal('modalSignup'); });
    document.getElementById('switchToLogin')?.addEventListener('click', ()=> { closeModal('modalSignup'); openModal('modalLogin'); });
    document.getElementById('lnkForgot')?.addEventListener('click', ()=> { closeModal('modalLogin'); openModal('modalForgot'); });
    document.getElementById('backToLogin')?.addEventListener('click', ()=> { closeModal('modalForgot'); openModal('modalLogin'); });

    // Google placeholders (wire with GIS later)
    document.getElementById('loginWithGoogle')?.addEventListener('click', ()=> alert('Sign in with Google (demo)'));
    document.getElementById('signupWithGoogle')?.addEventListener('click', ()=> alert('Sign up with Google (demo)'));

    // Optional parallax for hero
    const visual = document.getElementById('visual');
    if(visual){
      visual.addEventListener('mousemove', (e)=>{
        const r = visual.getBoundingClientRect();
        const dx = (e.clientX - (r.left + r.width/2)) / r.width;
        const dy = (e.clientY - (r.top + r.height/2)) / r.height;
        visual.querySelectorAll('.float-card').forEach((el, i)=>{
          const depth = (i+1)*3;
          el.style.transform = `translate(${dx*depth*6}px, ${-dy*depth*6}px)`;
        });
      });
      visual.addEventListener('mouseleave', ()=>{
        visual.querySelectorAll('.float-card').forEach(el=> el.style.transform = '');
      });
    }
  </script>
</body>
</html>
